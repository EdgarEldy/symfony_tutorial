{% extends 'default/base.html.twig' %}
{% block content %}
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Show product category</div>
            <div class="panel-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Category Name</th>
                        <td>{{ category.categoryName }}</td>
                    </tr>
                    </tbody>
                </table>
                <a href="{{ path('categories') }}">Back to list</a>
            </div>
        </div>
    </div>
{% endblock %}
